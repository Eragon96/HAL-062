<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:id="@+id/enginecontrol_activity">

    <io.github.controlwear.virtual.joystick.android.JoystickView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/joystickView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/engineOn"
        android:layout_marginTop="41dp"
        android:background="@drawable/knr"
        custom:JV_borderColor="#0B2161"
        custom:JV_borderWidth="4dp"
        custom:JV_buttonImage="@drawable/siekiera"
        custom:JV_buttonSizeRatio="25%"
        custom:JV_fixedCenter="true" />


    <TextView
        android:id="@+id/textViewX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/joystickView"
        android:text="X = "
        android:textColor="#0B2161" />

    <TextView
        android:id="@+id/textViewY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/engineOff"
        android:layout_alignTop="@+id/joystickView"
        android:text="Y = "
        android:textColor="#0B2161" />

    <Button
        android:id="@+id/engineOn"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="#0B2161"
        android:text="Engine ON"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/engineOff"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="#0B2161"
        android:text="Engine OFF"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/switchToArm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="485dp"
        android:text="Arm"
        android:backgroundTint="#0B2161"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/switchToEngines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="115dp"
        android:layout_marginTop="485dp"
        android:text="Engines"
        android:background="@android:color/transparent"
        android:textColor="#0B2161"/>
    <Button
        android:id="@+id/switchToBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="205dp"
        android:layout_marginTop="485dp"
        android:text="Bluetooth"
        android:backgroundTint="#0B2161"
        android:textColor="#FFFFFF" />


</RelativeLayout>